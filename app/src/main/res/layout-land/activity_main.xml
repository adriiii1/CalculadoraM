<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Expressionh"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="40sp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/Resulth"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:gravity="end"
        android:ellipsize="end"
        android:textSize="30sp"
        android:singleLine="true" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/MemoMash"
                style="@style/ActionButtonStyle"
                android:text="M+"
                />

            <TextView
                android:id="@+id/Divh"
                style="@style/ActionButtonStyle"
                android:text="/"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Unoh"
                style="@style/NumberButtonStyle"
                android:text="1"
                />

            <TextView
                android:id="@+id/Dosh"
                style="@style/NumberButtonStyle"
                android:text="2"
                />

            <TextView
                android:id="@+id/Tresh"
                style="@style/NumberButtonStyle"
                android:text="3"
                />

            <TextView
                android:id="@+id/Porh"
                style="@style/ActionButtonStyle"
                android:text="*"
                />
            <TextView
                android:id="@+id/Clearh"
                style="@style/ActionButtonStyle"
                android:text="CE"
                />

            <TextView
                android:id="@+id/Memoh"
                style="@style/ActionButtonStyle"
                android:text="ME"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Cuatroh"
                style="@style/NumberButtonStyle"
                android:text="4"
                />

            <TextView
                android:id="@+id/Cincoh"
                style="@style/NumberButtonStyle"
                android:text="5"
                />

            <TextView
                android:id="@+id/Seish"
                style="@style/NumberButtonStyle"
                android:text="6"
                />

            <TextView
                android:id="@+id/Menosh"
                style="@style/ActionButtonStyle"
                android:text="-"
                />
            <TextView
                android:id="@+id/a"
                style="@style/HexaButtonStyle"
                android:text="A" />

            <TextView
                android:id="@+id/b"
                style="@style/HexaButtonStyle"
                android:text="B" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Sieteh"
                style="@style/NumberButtonStyle"
                android:text="7"
                />

            <TextView
                android:id="@+id/Ochoh"
                style="@style/NumberButtonStyle"
                android:text="8"
                />

            <TextView
                android:id="@+id/Nueveh"
                style="@style/NumberButtonStyle"
                android:text="9"
                />

            <TextView
                android:id="@+id/Mash"
                style="@style/ActionButtonStyle"
                android:text="+"
                />
            <TextView
                android:id="@+id/c"
                style="@style/HexaButtonStyle"
                android:text="C" />
            <TextView
                android:id="@+id/d"
                style="@style/HexaButtonStyle"
                android:text="D" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Puntoh"
                style="@style/NumberButtonStyle"
                android:text="."
                />

            <TextView
                android:id="@+id/Ceroh"
                style="@style/NumberButtonStyle"
                android:text="0"
                />

            <TextView
                android:id="@+id/Borrarh"
                style="@style/NumberButtonStyle"
                android:text="Borrar"
                />

            <TextView
                android:id="@+id/Igualh"
                style="@style/ActionButtonStyle"
                android:text="="
                />
            <TextView
                android:id="@+id/e"
                style="@style/HexaButtonStyle"
                android:text="E" />

            <TextView
                android:id="@+id/f"
                style="@style/HexaButtonStyle"
                android:text="F" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
